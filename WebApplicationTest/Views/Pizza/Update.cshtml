@model Pizza

<div class="container">

    <form asp-controller="Pizza" asp-action="Update" method="post">

        @Html.AntiForgeryToken()
        <div class="m-3">
            <label>Id:</label>
            <input asp-for="Id" type="text" class="form-control" disabled />
        </div>

        <div class="m-3">
            <label>Nome pizza:</label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="m-3">
            <label>Descrizione:</label>
            <textarea asp-for="Description" rows="10" class="d-block w-100"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="m-3 form-check">
            <label>URL dell'immagine':</label>
            <input asp-for="Image" type="text" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <div class="m-3 form-check">
            <label>Prezzo:</label>
            <input asp-for="Price" type="text" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Salva Modifiche al Post</button>

    </form>
</div>