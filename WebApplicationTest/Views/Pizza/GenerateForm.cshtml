@model Pizza

<div class="container-fluid">
    <form asp-controller="Pizza" asp-action="GenerateForm" method="post">
        @Html.AntiForgeryToken()
        <div class="col-12 m-3 p-2">
            <label>
                Nome della pizza:
            </label>
            <input asp-for="Name" type="text" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-12 m-3 p-2">
            <label>
                Descrizione:
            </label>
            <textarea asp-for="Description" rows="10" class="d-block w-100"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="col-12 m-3 p-2">
            <label>
                URL dell'immagine:
            </label>
            <input asp-for="Image" type="text" class="form-control"/>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="col-12 m-3 p-2">
            <label>
                Prezzo
            </label>
            <input asp-for="Price" type="text" class="form-control"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-info">Salva</button>
    </form>
</div>
